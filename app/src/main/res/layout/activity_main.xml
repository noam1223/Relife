<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <believe.cht.fadeintextview.TextView
        android:id="@+id/text_view_relife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="Relife"
        android:textColor="#ffffff"
        android:textSize="55sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_up_btn"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_btn"
        android:onClick="loginBtnClicked"
        android:text="משתמש קיים"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/custom_btn"
        android:onClick="signUpBtn"
        android:text="משתמש חדש"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/relife_logo_image_view"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_above="@+id/text_view_relife"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/relife_logo" />


</RelativeLayout>