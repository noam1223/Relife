<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MyTurnsActivity"
    android:background="@drawable/custom_background_color">

    <TextView
        android:id="@+id/my_turn_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="התורים שלי"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:shadowRadius="10"
        android:shadowDx="10"
        android:shadowDy="2"
        android:shadowColor="#000000"
        android:background="@drawable/custom_turn_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_turn_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_turn_text_view"
        android:layout_marginTop="30sp"/>


</RelativeLayout>