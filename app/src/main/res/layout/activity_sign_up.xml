<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity"
    android:background="@drawable/custom_background_color">

    <EditText
        android:id="@+id/user_name_edit_text_sign_up"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint=":מה שמך"
        android:gravity="center"
        android:inputType="textPersonName"
        android:layout_above="@+id/phone_number_edit_text_sign_up"
        android:layout_marginBottom="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_edit_text"/>

    <EditText
        android:id="@+id/phone_number_edit_text_sign_up"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint=":מס׳ הטלפון שבבעלותך"
        android:gravity="center"
        android:inputType="phone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_edit_text"/>

    <Button
        android:id="@+id/approval_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="אישור"
        android:textSize="20sp"
        android:layout_below="@+id/phone_number_edit_text_sign_up"
        android:layout_marginTop="40dp"
        android:onClick="signUp"
        android:textColor="#ffffff"
        android:background="@drawable/custom_btn"/>

</RelativeLayout>